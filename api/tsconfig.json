{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "../",
    "paths": {
      "@/*": ["backend/src/*"]
    }
  },
  "include": ["*.ts", "../backend/src/**/*.ts"],
  "exclude": ["node_modules", "dist", "../backend/**/*.test.ts", "../backend/**/__tests__/**"]
}
